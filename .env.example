# ==========================================
# TRACKY PRO FLOW - Environment Variables
# ==========================================

# ==========================================
# SUPABASE (OBRIGATÓRIO)
# ==========================================
# URL do projeto Supabase
VITE_SUPABASE_URL=https://seu-projeto.supabase.co

# Chave pública anônima (anon key)
VITE_SUPABASE_ANON_KEY=seu-anon-key-aqui

# ==========================================
# NUVEMSHOP (MARKETPLACE)
# ==========================================
# ID da aplicação Nuvemshop
VITE_NUVEMSHOP_APP_ID=

# Secret da aplicação Nuvemshop
VITE_NUVEMSHOP_APP_SECRET=

# URL de redirect após OAuth
VITE_NUVEMSHOP_REDIRECT_URI=http://localhost:5173/integrations/nuvemshop/callback

# ==========================================
# SMARTENVIOS (TRANSPORTADORA)
# ==========================================
# Chave de API da Smartenvios
VITE_SMARTENVIOS_API_KEY=

# Ambiente (sandbox ou production)
VITE_SMARTENVIOS_ENVIRONMENT=sandbox

# URL base da API
VITE_SMARTENVIOS_API_URL=https://api.smartenvios.com

# ==========================================
# TRANSPORTADORAS DIRETAS
# ==========================================
# DHL
VITE_DHL_API_KEY=
VITE_DHL_API_SECRET=
VITE_DHL_ACCOUNT_NUMBER=

# FedEx
VITE_FEDEX_API_KEY=
VITE_FEDEX_API_SECRET=
VITE_FEDEX_ACCOUNT_NUMBER=

# Correios
VITE_CORREIOS_TOKEN=
VITE_CORREIOS_CARTAO_POSTAGEM=

# ==========================================
# MERCADO LIVRE
# ==========================================
VITE_MERCADOLIVRE_CLIENT_ID=
VITE_MERCADOLIVRE_CLIENT_SECRET=
VITE_MERCADOLIVRE_REDIRECT_URI=http://localhost:5173/integrations/mercadolivre/callback

# ==========================================
# SHOPIFY
# ==========================================
VITE_SHOPIFY_CLIENT_ID=
VITE_SHOPIFY_CLIENT_SECRET=
VITE_SHOPIFY_REDIRECT_URI=http://localhost:5173/integrations/shopify/callback
VITE_SHOPIFY_SCOPES=read_orders,write_orders,read_customers

# ==========================================
# WOOCOMMERCE
# ==========================================
VITE_WOOCOMMERCE_CONSUMER_KEY=
VITE_WOOCOMMERCE_CONSUMER_SECRET=

# ==========================================
# MONITORING & ANALYTICS
# ==========================================
# Sentry DSN para error tracking
VITE_SENTRY_DSN=

# Sentry environment (development, staging, production)
VITE_SENTRY_ENVIRONMENT=development

# Google Analytics 4 ID
VITE_GA_ID=

# ==========================================
# WHATSAPP (WPPCONNECT)
# ==========================================
# Chave secreta para comunicação com WPPConnect Server
WPPCONNECT_SECRET_KEY=seu-secret-key-seguro-aqui

# URL do WPPConnect Server
WPPCONNECT_SERVER_URL=http://localhost:21465

# ==========================================
# EMAIL (SMTP)
# ==========================================
VITE_SMTP_HOST=smtp.gmail.com
VITE_SMTP_PORT=587
VITE_SMTP_USER=
VITE_SMTP_PASSWORD=
VITE_SMTP_FROM_NAME=Tracky Pro Flow
VITE_SMTP_FROM_EMAIL=

# ==========================================
# TWILIO (SMS)
# ==========================================
VITE_TWILIO_ACCOUNT_SID=
VITE_TWILIO_AUTH_TOKEN=
VITE_TWILIO_PHONE_NUMBER=

# ==========================================
# API & WEBHOOKS
# ==========================================
# URL base da sua API (para webhooks)
VITE_API_URL=http://localhost:5173

# URL pública (para produção)
VITE_PUBLIC_URL=https://seu-dominio.com

# ==========================================
# DEVELOPMENT
# ==========================================
# Porta do servidor de desenvolvimento
PORT=5173

# Modo de desenvolvimento (true/false)
VITE_DEV_MODE=true

# Habilitar logs detalhados
VITE_DEBUG=false

# ==========================================
# FEATURE FLAGS
# ==========================================
# Habilitar integração com Mercado Livre
VITE_FEATURE_MERCADOLIVRE=true

# Habilitar integração com Shopify
VITE_FEATURE_SHOPIFY=true

# Habilitar notificações por WhatsApp
VITE_FEATURE_WHATSAPP=true

# Habilitar notificações por SMS
VITE_FEATURE_SMS=false

# Habilitar exportação de relatórios
VITE_FEATURE_REPORTS=true

# ==========================================
# RATE LIMITING
# ==========================================
# Requests por minuto permitidos
VITE_RATE_LIMIT_PER_MINUTE=60

# Redis URL (para rate limiting distribuído)
REDIS_URL=

# ==========================================
# BACKUP & STORAGE
# ==========================================
# AWS S3 para backups (opcional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# ==========================================
# NOTAS IMPORTANTES
# ==========================================
# 1. NUNCA commite este arquivo com valores reais
# 2. Use .env.local para desenvolvimento local
# 3. Configure variáveis no Vercel/Netlify para produção
# 4. Mantenha chaves secretas seguras e rotacione regularmente
# 5. Use diferentes chaves para dev/staging/production
